<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".userData.EditUserData">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/kopub_world_bold"
        android:gravity="center"
        android:text="관심있는 질병 또는 효능을 \n선택해 주세요."
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_design_white"
            android:fontFamily="@font/kopub_world_medium"
            android:text="소화불량" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_design_white"
            android:fontFamily="@font/kopub_world_medium"
            android:text="충치" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_design_white"
            android:fontFamily="@font/kopub_world_medium"
            android:text="변비" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_design_white"
            android:fontFamily="@font/kopub_world_medium"
            android:text="빈혈" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_design_white"
            android:fontFamily="@font/kopub_world_medium"
            android:text="당뇨" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_design_white"
            android:fontFamily="@font/kopub_world_medium"
            android:text="혈당" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_design_white"
            android:fontFamily="@font/kopub_world_medium"
            android:text="고혈압" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_design_white"
            android:fontFamily="@font/kopub_world_medium"
            android:text="위암" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_design_white"
            android:fontFamily="@font/kopub_world_medium"
            android:text="직장암" />

        <Button
            android:id="@+id/btn10"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_design_white"
            android:fontFamily="@font/kopub_world_medium"
            android:text="유방암" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:id="@+id/btn11"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_design_white"
            android:fontFamily="@font/kopub_world_medium"
            android:text="심장질환" />

        <Button
            android:id="@+id/btn12"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_design_white"
            android:fontFamily="@font/kopub_world_medium"
            android:text="골다공증" />
    </LinearLayout>

    <Button
        android:id="@+id/completeBtn2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_design"
        android:fontFamily="@font/kopub_world_medium"
        android:text="저장하기"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</LinearLayout>